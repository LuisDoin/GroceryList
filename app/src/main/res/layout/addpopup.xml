<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/addLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingTop="10dp"
                 android:textStyle="italic"
                 android:textSize="18sp"
                 android:id="@+id/addtext"
                 android:layout_centerHorizontal="true"
                 android:text="@string/addtext"/>

            <EditText
                android:id="@+id/nomeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addtext"
                android:hint="@string/hintNome" />

            <EditText
                android:id="@+id/quantidadeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nomeInput"
                android:hint="@string/hintquantidade"
                android:inputType="number" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantidadeInput"
                android:text="@string/addButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                />






        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>